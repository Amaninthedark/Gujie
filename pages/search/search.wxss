/* pages/search/search.wxss */ 
.search-conten{
  width: 100%;
  height: 100%;

}
.search-heard{
  width: 100%;
  height: 100rpx;
  background: white;
  border-bottom: 1px solid #FAFAFA;
  display: flex;
  align-items:center;
}
.left{
  width: 82%;
  height: 50rpx;
  background: #F5F5F5;
  border-radius: 100rpx;
  padding:5rpx;
  margin-left: 20rpx;
}
.left icon{
  float: left;
  margin-left: 8rpx;
  margin-top:12rpx;
  margin-right: 8rpx;
}
.left input{
  margin-top:8rpx;
  float: left;
  font-size: 14px;
  width: 90%;
  color: #666;
}
.right{
  width: 80rpx;
  height: 50rpx;
  background: #E3412C;
  display: flex;
  align-items:center;
  justify-content: center;
  margin-left: 15rpx;
  border-radius: 5rpx;
}
.right label{
  

  color: white;
  font-size: 12px;
}
.search-bottom{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  
}
.search-bottom-heard{
   width: 100%;
  height: 50rpx;
 
}
.bottom-left{
  float: left;
  margin-left: 10px;
  font-size: 16px;
}
.bottom-right{
  float: right;
  margin-right: 10px;
  font-size: 12px;
  color: #E3412C;
}

.search-bottom-bottom label{
  font-size: 12px;
  background:#F5F5F5;
  padding: 10rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  float: left;
}

