.top{
  display: flex;
}  
.top image{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 40rpx 20rpx 50rpx;
}  
.logistics{    
  margin: 19rpx 0rpx;
  font-size: 28rpx;  
}  
.br{  
  width: 100%;  
  margin-top: 30rpx; 
  margin-bottom: 30rpx;  
  background: #E5E5E5;  
  height: 10rpx;  
}  
.info{
   display: flex;
   margin-top: 30rpx;
   width: 90%;
   margin-left: 5%;
   margin-right: 5%;
}
.day_time{

   width: 20%; 
}
.day{
   display: flex;
  justify-content:flex-end; 
  color: #BABABA;
  font-size: 25rpx;
}
.day0{
   display: flex;
  justify-content:flex-end; 
  color: blue;
